#
# wm independent hotkeys
#

# terminal emulator
super + Return
  alacritty

# ai
super + a
  alacritty --title opencode --class opencode -e opencode --agent plan

# program launcher
super + d
  rofi -i -show drun -show-icons true

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

# switch language input
super + space
  {setxkbmap th, setxkbmap us}

# web browser
super + b
  brave
  # (pgrep brave && bspc desktop -f ^2) || brave

super + shift + n
  brave --incognito

# file manager
# super + f
#         pcmanfm

# video menu
super + o
  $HOME/.script/mpvrofi.sh

# emoji menu
super + e
  rofi -i -modi emoji -show emoji

# man menu
super + F1
  $HOME/.script/manpdf.sh

# clipboard manager
super + v
  rofi -i -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'
  # rofi -i -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'; xdotool type --delay 0 "$(xclip -o -selection clipboard)"

# screenshot
super + Print
  gnome-screenshot -i

super + shift + s
  gnome-screenshot -a -f /tmp/screenshot.png && xclip -selection clipboard -t image/png -i /tmp/screenshot.png

super + shift + Print
  gnome-screenshot -c -f /tmp/screenshot.png && xclip -selection clipboard -t image/png -i /tmp/screenshot.png

super + p
  pavucontrol

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# close
super + {q, backslash}
	$HOME/.script/confirm_close.sh

# kill
super + x
	$HOME/.script/confirm_kill.sh

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# toggle the window state tiled/floating
# super + t
#         {bspc node -t floating, bspc node -t tiled}
super + button2
        {bspc node -t floating, bspc node -t tiled}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
# super + {_,shift + }{Left,Down,Up,Right}
# 	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
# super + {grave,Tab}
# 	bspc {node,desktop} -f last

super + Tab
	bspc desktop -f last

alt + Tab
	bspc node -f last

# focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + control + {h,j,k,l}
	bspc node -z {left -100 0,bottom 0 100,top 0 -100,right 100 0}
super + alt + control + {Left,Down,Up,Right}
  bspc node -z {left -100 0,bottom 0 100,top 0 -100,right 100 0}

# contract a window by moving one of its side inward
super + alt + {h,j,k,l}
	bspc node -z {right -100 0,top 0 100,bottom 0 -100,left 100 0}
super + alt + {Left,Down,Up,Right}
  bspc node -z {right -100 0,top 0 100,bottom 0 -100,left 100 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-100 0,0 100,0 -100,100 0}
